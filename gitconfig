# vi:ft=gitconfig
[user]
	name = Robert Liebowitz
	email = rliebz@gmail.com
[push]
	default = current
[color "diff"]
	context = white
	meta = blue
	old = red
	new = green
	func = yellow
	frag = cyan
[color "status"]
	added = green
	changed = yellow
	untracked = blue
[alias]
	delete-branches = "!git fetch --prune && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -D $branch; done"
	branches = "for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes"
	hist = "log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short"
[core]
	pager = less -x5
[fetch]
	prune = true
[rebase]
	autosquash = true
[http "https://gopkg.in"]
	followRedirects = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[advice]
	skippedCherryPicks = false
[include]
	path = ~/.gitconfig.local
