{
  "coc.source.around.enable": false,
  "coc.source.buffer.enable": false,
  "diagnostic.displayByAle": true,
  "suggest.detailField": "menu",
  "suggest.disableKind": true,
  "suggest.disableMenuShortcut": true,
  "suggest.snippetIndicator": "",
  "languageserver": {
    "gopls": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".git/", ".hg/"],
      "settings": {
        "gopls": {
          "buildFlags": [
            // Add common testing build tags
            "-tags=e2e,integration,integrity"
          ],
          "gofumpt": true,
          "linksInHover": false
        }
      }
    },
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
